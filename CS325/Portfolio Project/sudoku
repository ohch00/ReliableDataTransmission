def row_check(user_solution):
    # shorten range to 9 for each row-- currently iterates over all numbers
    for i in range(len(user_solution)):
        counter = 0
        current = user_solution[i]
        for j in range(i, i+1):
            if current == user_solution[j]:
                return False
    return True


